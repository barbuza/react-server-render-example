@require "nib/reset"

global-reset()

body {
  > header {
    background: #eee;
    padding: 4px 8px;
  }
}

body {
  font-family: "Open Sans";
  font-weight: 400;
}

#workspace {
  padding: 20px;
}

#error404 {
  font-size: 300%;
}

#network-error {
  popup(400px, 100px);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 150%;
}

#locked-app {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

@require "./preloader"
@require "./grid"
@require "./popup"
